<h1 class="display-4">Tasks for Today</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>What is the Task?</th>
            <th></th>    
        </tr>
    </thead>
    <tbody>
        <% taskList.forEach(function(desc){ %>
        <tr>
            <td><%= desc %></td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%=desc%>">
                        Edit
                </button>
                <div class="modal" id="<%= desc %>">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                  <h4 class="modal-title">Edit Task</h4>
                                  <button type="button" class="close" data-dismiss="#<%= desc %>">&times;</button>
                                </div>
                          
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <form method="post" action="/edit">
                                        <div class="form-group">
                                            <input type="text" name="editedDesc" class="form-control">
                                            <input type="hidden" name="desc" value="<%= desc %>" class="form-control">
                                        </div>
                                        <input type="submit" value="Save" class="btn btn-success">
                                    </form>
                                </div>
                          
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-danger" data-dismiss="<%=desc%>">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>      
                <form class="d-inline" action="/update" method="post">
                    <input type="hidden" value="<%= desc %>" name="desc" class="btn btn-success">
                    <input type="submit" value="Done" class="btn btn-success">
                </form>
                <form class="d-inline" action="/delete" method="post">
                    <input type="hidden" value="<%= desc %>" name="desc" class="btn btn-success">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<h1 class="display-4">Add Tasks</h1>
<form method="post" action="/add">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="desc" class="form-control">
    </div>
    <input type="submit" value="Save" class="btn btn-success">
</form>